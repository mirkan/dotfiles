# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.
#
# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).
### SOUND ###
# pulse
# Increase volume
#"pamixer --increase 5"
"pactl set-sink-volume 0 +5%"
  XF86AudioRaiseVolume
# Decrease volume
"pactl set-sink-volume 0 -5%"
  XF86AudioLowerVolume
# Mute volume
"pactl set-sink-mute 0 toggle"
  XF86AudioMute

#ALSA
# Increase volume
#"amixer set Master 5+"
#  Mod4+F3
# Decrease volume
#"amixer -c 0 set Master 5-"
#   Mod4+F2
# Mute volume
#"amixer -c 0 set Master toggle"
#  Mod4+F1
#
### PROGRAMS/SOFTWARE ###
#MPD
#Next mpd track
"mpc -p 6600 next"
  control+alt+Right
#Previous mpd track
"mpc -p 6600 prev"
  control+alt+Left
#Play/Pause mpd
"mpc -p 6600 toggle"
  control+alt+p

# SCREENSHOT
# Take screenshot at selected window or area and save to ~/.screenshots
"~/.bin/screenshot select"
  control+Print
# Take full screenshot of display and save to ~/.screenshots
"~/.bin/screenshot"
  Print
# Better brightness adjustment	
"~/.bin/brightness.sh up"
  XF86MonBrightnessUp
"~/.bin/brightness.sh down"
  XF86MonBrightnessDown

### MISC ###
#F12 for X-selection
#"xvkbd -no-jump-pointer -xsendevent -text "`xsel`" 2>/dev/null"
#    F12
