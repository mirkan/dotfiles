exec --no-startup-id i3-msg "workspace $tag8; exec urxvtc -e sh -c 'ssh brix journalctl -af' -no-startup-id; workspace $tag1"
exec --no-startup-id i3-msg "workspace $tag8; exec urxvtc -e sh -c 'journalctl -af' -no-startup-id; workspace $tag1"
