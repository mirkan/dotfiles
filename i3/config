# i3 config file (v4)
#
set $mod Mod4
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
#font pango: DejaVu Sans Mono 8
#font pango: URW Gothic L Book 8, FontAwesome 8
#font pango: Terminus 11
font xft:Inconsolata-g 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod 
focus_follows_mouse no

#GAPS
#gaps inner 2
#gaps outer 2

hide_edge_borders smart
#Workspaces
set $tag1 "1:main"
set $tag2 "2:www"
set $tag3 "3:work"
set $tag4 "4:virt"
set $tag5 "5:media"
#set $tag6 "6:spel"
#set $tag7 "7:mail"
#set $tag8 "8:log"
#set $tag5 "9:irc"
set $tag8 "0:log"
set $RUN exec --no-startup-id

# KEY BINDINGS
bindsym $mod+Return exec urxvt
bindsym $mod+BackSpace exec urxvt -e bash -c "ranger"
bindsym $mod+Shift+q kill
bindsym $mod+Shift+Escape exec --no-startup-id i3lock-fancy
bindsym $mod+d exec --no-startup-id rofi -auto-select -show run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+z focus child

# switch to workspace
bindsym $mod+1 $RUN .i3/i3-workspace.sh 1
bindsym $mod+2 $RUN .i3/i3-workspace.sh 2
bindsym $mod+3 $RUN .i3/i3-workspace.sh 3
bindsym $mod+4 $RUN .i3/i3-workspace.sh 4
bindsym $mod+5 $RUN .i3/i3-workspace.sh 5 
bindsym $mod+6 $RUN .i3/i3-workspace.sh 6
bindsym $mod+7 $RUN .i3/i3-workspace.sh 7
bindsym $mod+8 $RUN .i3/i3-workspace.sh 8
bindsym $mod+9 $RUN .i3/i3-workspace.sh 9
bindsym $mod+0 $RUN .i3/i3-workspace.sh 0

# move focused container to workspace
bindsym $mod+Shift+1 $RUN .i3/i3-workspace.sh 1 move
bindsym $mod+Shift+2 $RUN .i3/i3-workspace.sh 2 move
bindsym $mod+Shift+3 $RUN .i3/i3-workspace.sh 3 move
bindsym $mod+Shift+4 $RUN .i3/i3-workspace.sh 4 move
bindsym $mod+Shift+5 $RUN .i3/i3-workspace.sh 5 move
bindsym $mod+Shift+6 $RUN .i3/i3-workspace.sh 6 move
bindsym $mod+Shift+7 $RUN .i3/i3-workspace.sh 7 move
bindsym $mod+Shift+8 $RUN .i3/i3-workspace.sh 8 move
bindsym $mod+Shift+9 $RUN .i3/i3-workspace.sh 9 move
bindsym $mod+Shift+0 $RUN .i3/i3-workspace.sh 0 move

bindsym $mod+t border normal
bindsym $mod+y border 1pixel
bindsym $mod+u border none

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "$HOME/.bin/i3_powermenu.sh"

# PREVENT TILING WINDOWS, FLOAT:
for_window [class="Pavucontrol"] floating enable
for_window [class="Shutter"] floating enable
#for_window [class="Wine" instance="Gw.exe"] floating enable

# Hide title for applications:
for_window [class="URxvt"] border none
for_window [class="Firefox"] border none

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command	   		i3blocks
	position				top
	strip_workspace_numbers	no
	tray_output 			primary
	tray_padding 			1
  colors {
    separator #666666
    background #222222
    statusline #dddddd
    focused_workspace #0088CC #0088CC #ffffff
    active_workspace #333333 #333333 #ffffff
    inactive_workspace #333333 #333333 #888888
    urgent_workspace #2f343a #900000 #ffffff
  }
}

# Assign to workspace
$RUN i3-msg "workspace $tag1; exec urxvt; workspace $tag1"
$RUN i3-msg "workspace $tag2; exec chromium --no-startup-id; workspace $tag1"
$RUN i3-msg "workspace $tag0; exec urxvt -e sh -c 'journalctl -p0..6 -f' -no-startup-id; workspace $tag1"

client.focused #0088CC #0088CC #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #333333 #333333 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000
